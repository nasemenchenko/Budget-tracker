        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetTracker1"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="500" MinWidth="545">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"></RowDefinition>
            <RowDefinition Height="160*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Name="UserLabel" FontSize="30" HorizontalAlignment="Center"></Label>
        <DataGrid Grid.Row="1" Name="DataGridBudgetInfo"></DataGrid>
    </Grid>
</Window>
